	;소분기
	;-------------------------------------------------
	;전투전
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;핸디캡을 추가해, 수치가 클수록 아나타가 불리해진다   수치가 음수면 아나타가 유리하게
	;캐릭터의 능력에 관계없이 강하게 하거나 약하게 할 수 있다
	;기입체크 (=0, 비표시、1, 표시)
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF ABL:MASTER:전투능력 > ABL:전투능력
			
		ELSE
			IF MARK:반발각인 == 3 && !TALENT:연인
				SELECTCASE RAND:3
					CASE 0
						PRINTFORML 「승부라...봐주지 않아도 되는거겠죠?」
						PRINTFORML 사토리는 어둡게 웃고 있다
					CASE 1
						PRINTFORML 「저랑 붙고 싶으시다라...후회하셔도 소용없어요?」
					CASE 2
						PRINTFORML 「탄막놀이라...하고 싶다고 하셨으니 각오는 되셨겠죠?」
						PRINTFORML 사토리는 음흉하게 웃고 있다
				ENDSELECT
			ELSEIF TALENT:연인||TALENT:사모||TALENT:연모||TALENT:애욕
				SELECTCASE RAND:3
					CASE 0
						
					CASE 1
						
					CASE 2
						
				ENDSELECT
			ELSE
				SELECTCASE RAND:3
					CASE 0
						
					CASE 1
						
					CASE 2
						
				ENDSELECT
			ENDIF
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;핸디캡
	;기입체크 (=0, 비표시、1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;핸디캡을 추기하지 않으면 표시되지 않기 때문에 미기입으로 좋다
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;전투중 TARGET 피탄시 구상
	;기입체크 (=0, 비표시、1, 표시)
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		;일률적으로「당했다ー」정도만 해도 돼
		SELECTCASE 상대잔기
			;남은 잔기 3이 표시될 수 있는건【습람심식】소유만 - 없음
			CASE 3
			;	PRINTFORML 
			CASE 2,1
				IF MARK:반발각인 == 3 && !TALENT:연인
					SELECTCASE RAND:3
						CASE 0
							PRINTFORML 「윽...잠깐 당황했을 뿐이야...!」
						CASE 1
							PRINTFORML 「큿...! 아직 멀었어...!」
						CASE 2
							PRINTFORML 「피, 피할 수 있었는데...!」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
						CASE 0
							PRINTFORML 「빠, 빨랏...」
						CASE 1
							PRINTFORML 「잠...너무 빠르잖아...!」
						CASE 2
							PRINTFORML 「어, 어디로 피해야 하는...윽!」
					ENDSELECT
				ENDIF
			CASE 0
				IF MARK:반발각인 == 3 && !TALENT:연인
					SELECTCASE RAND:3
						CASE 0
							PRINTFORML 「윽?!」
						CASE 1
							PRINTFORML 「으긋...으으으...」
							PRINTFORML 사토리는 기진맥진한 채 쓰러졌다
						CASE 2
							PRINTFORML 「보, 보였는데도...」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
						CASE 0
							PRINTFORML 「피, 피할수 있었는데...으읏...」
						CASE 1
							PRINTFORML 「아슬아슬하게 피할줄 알았는데...」
						CASE 2
							PRINTFORML 「생각보다 강하시네요...」
					ENDSELECT
				ENDIF
		ENDSELECT
	ENDIF
	;-------------------------------------------------
	;전투중
	;TARGET의【잔인무도】발동시 - 없음
	;ARG는 TARGET의 잔기
	;기입체크 (=0, 비표시、1, 표시)
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
